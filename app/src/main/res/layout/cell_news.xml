<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/time_icon"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/ic_time_stock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_arrow_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/symbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:singleLine="true"
        android:text='АО "Altyn Bank" (Дочерний банк China Citic Bank Corporation  Limited) сообщило о подтверждении агентством Fitch Ratings ..'
        android:textColor="@color/colorGreyLight"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_marginStart="4dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="22:23:43 12.12:12"
        android:textColor="@color/colorGreyEasiest"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/time_icon" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorGreyEasiest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>